{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictFunctionTypes": false,
    "downlevelIteration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "lib/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "baseUrl": "./"
}